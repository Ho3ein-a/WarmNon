ead> <tbody> <% let number = 1; orders.forEach(item => { %> <tr> <td data-label="ردیف"><%= number %></td> <td data-label="نان"><%= item.bread_name %></td> <td data-label="نوع نان"><%= item.type %></td> <td data-label="تعداد"><%= item.number %></td> <td data-label="تاریخ"><%= item.date %></td> <td data-label="ساعت"><%= item.time %></td> <td data-label="مبلغ کل"><%= item.total_price %> تومان</td> <td data-label="نوع تحویل"><%= item.order_type %></td> </tr> <% number++ %> <% }) %> </tbody> <input type="hidden" name="_csrf" value="<%= csrfToken %>"> </table> <button type="button" onclick="window.location.href=`/main` "" class="btn-back">بازگشت به صفحه اصلی</button> <% } %>  <%- include('./includes/footer.ejs') %></div><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script></body></html>